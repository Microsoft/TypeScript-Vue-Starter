{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "typeRoots": [
            "node_modules/@types/"
        ]
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ]
}